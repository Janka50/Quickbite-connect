# QuickBite Connect - Environment Variables Template
# Copy this file to .env and fill in your actual values

# Django Settings
DJANGO_ENVIRONMENT=development
SECRET_KEY=your-secret-key-here-change-in-production-use-50-chars-min
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DATABASE_URL=postgres://user:password@localhost:5432/quickbite_db
DB_NAME=quickbite_db
DB_USER=postgres
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=noreply@quickbite.com

# AWS S3 (Optional for static/media files in production)
USE_S3=False
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=quickbite-bucket
AWS_S3_REGION_NAME=us-east-1

# Stripe Payment Gateway
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Google Maps API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Twilio SMS
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# Sentry Error Tracking (Production)
SENTRY_DSN=https://your_sentry_dsn_url_here

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8000

# Admin URL (Production - obscure for security)
ADMIN_URL=admin/

# International Chain APIs (Mock for MVP)
MCDONALDS_API_KEY=mock_api_key_for_mcdonalds
ALBAIK_API_KEY=mock_api_key_for_albaik

# Railway.app Deployment (Production)
# RAILWAY_STATIC_URL=https://your-app.railway.app
# RAILWAY_ENVIRONMENT=production